<div class="alert alert-danger  alert-dismissible fade show" role="alert" id="errorMessage" data-alert="info">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <strong>Oh snap!</strong>
    {% if errorMessage is defined %}
        {{ errorMessage }}
    {% else %}
        {{ app.request.get("errorMessage") }}
    {% endif %}
</div>