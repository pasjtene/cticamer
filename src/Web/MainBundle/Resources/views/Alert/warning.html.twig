<div class="alert alert-warning alert-dismissible fade show" role="alert" id="warningMessage" data-alert="info">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <strong>Warning!</strong>
    {% if warningMessage is defined %}
        {{ warningMessage }}
    {% else %}
        {{ app.request.get("warningMessage") }}
    {% endif %}
</div>