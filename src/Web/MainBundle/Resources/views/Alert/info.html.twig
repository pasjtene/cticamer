<div class="alert alert-info alert-dismissible fade show" role="alert" id="infoMessage" data-alert="info">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <strong>Heads up!</strong>
    {% if infoMessage is defined %}
        {{ infoMessage }}
    {% else %}
        {{ app.request.get("infoMessage") }}
    {% endif %}
</div>