{% extends 'MainBundle::layout.html.twig' %}

{% block meta %}
    <meta charset="utf-8">
    <meta name = "description" content = "{% trans from 'ctifooter' %} descriptions_contacts {% endtrans %}" >
    <meta name = "keywords" content = "{% trans from 'ctifooter' %} keyword_contacts {% endtrans %}" >
    <meta name="author" content="cticamer.com - Douala Bonamoussadi">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}
{% block title %}
