                        <div class="category-title">
                            <h3> {% trans from 'vacances' %} troisVAGUES {% endtrans %} </h3>
                        </div>

                        <div class="category-desktop-contain">
                            {% trans from 'vacances' %} texteDebut {% endtrans %}
                            <ul>
                                <li> {% trans from 'vacances' %} vague01 {% endtrans %} <span class="vagues"> {% trans from 'vacances' %} periode01 {% endtrans %} </span> </li>
                                <li> {% trans from 'vacances' %} vague02 {% endtrans %} <span class="vagues"> {% trans from 'vacances' %} periode02 {% endtrans %} </span> </li>
                                <li> {% trans from 'vacances' %} vague03 {% endtrans %} <span class="vagues"> {% trans from 'vacances' %} periode03 {% endtrans %} </span> </li>
                            </ul>
                            {% trans from 'vacances' %} texteFin {% endtrans %}
                        </div>

                    </div>
                    <div class="categorie">
                        <div class="category-title">
                            <h3> {% trans from 'cours-intensifs' %} manuels {% endtrans %} </h3>
                        </div>
                        {% trans from 'cours-intensifs' %} messagMANUELS {% endtrans %}
                        <div class="category-desktop-contain">

                        </div>
                        <div class="category-desktop-contain">
                            <img class="manuels-angl-img" src="{{ asset('data/img/englishUnlimited2.jpg') }}">
                            <img class="manuels-angl-img" src="{{ asset('data/img/english-unlimited-elementary-a-combo-with-dvd-roms-2.png') }}">
