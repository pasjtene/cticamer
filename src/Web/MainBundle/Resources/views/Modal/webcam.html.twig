<div class="modal fade bd-example-modal-lg" id="webcam-modal" tabindex="-1" role="dialog" aria-labelledby="webcam-modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="webcam-modalLabel"> {% trans  from "photo"  %} body.webcam  {% endtrans %}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" >
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <audio id="webcam-audio" src='{{ asset('data/audio/snap.wav') }}'></audio>
                <audio id="webcam-audio-off" src='{{ asset('data/audio/takeoff.wav') }}'></audio>
                <div class="row">
                    <div class="col-md-6 col-sm-12 text-center webcam-block-video">
                       <div>
                           <video id="webcam-video" class="" ></video>
                       </div>
                        <br>
                        <button id="webcam-startbutton" class="btn btn-warning">{% trans from "photo"  %} body.print {% endtrans %}</button>
                    </div>
                    <div class="col-md-6 col-sm-12 text-center webcam-block-img">
                        <div>
                            <img src="{{ asset('data/img/question2.png') }}" id="webcam-photo" alt="photo" class=" img-responsive">
                        </div>
                        <br>
                        <button class="btn btn-warning" id="webcam-save">{% trans from "photo"  %} body.save {% endtrans %}</button>
                        <img src="{{ asset('dist/loader.gif') }}" alt="" id="webcam-loader">
                        <br>
                        <span id="webcam-notification" class="text-success">{% trans from "photo"  %} body.notification {% endtrans %}</span>
                    </div>
                    <canvas id="webcam-canvas" style="display: none;" >/canvas>
                </div>
            </div>
            <div class="modal-footer ">
                <a  class="btn btn-primary pull-right" href="{{ path('main_profile') }}">{% trans from "photo"  %} body.next {% endtrans %}</a>
            </div>
        </div>
    </div>
</div>